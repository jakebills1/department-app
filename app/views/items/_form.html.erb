<h1><%= @item.id ? 'Edit Item' : 'Add Item' %></h1>
<hr />
<%= form_for [@department, @item] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />

  <%= f.label :price%>
  <%= f.number_field :price, :step => 0.01 %>

  <%= f.label :description %>
  <%= f.text_area :description %>
  
  <%= f.submit %>
<% end %>